{
  "scripts": {
    "build-client": "webpack --config webpack.config.js",
    "build-client-dev": "webpack --config webpack.dev.config.js",
    "build-server": "tsc --project tsconfig.server.json",
    "build": "npm run build-client && npm run build-server",
    "build-dev": "npm run build-client-dev && npm run build-server",
    "start": "node dist/server/server.js",
    "dev": "concurrently \"webpack serve --config webpack.dev.config.js\" \"nodemon\""
  },
  "dependencies": {
    "express": "^4.17.1",
    "ws": "^8.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/ws": "^8.5.4",
    "concurrently": "^7.0.0",
    "nodemon": "^3.1.3",
    "typescript": "^5.4.5",
    "ts-node": "^10.4.0",
    "ts-loader": "^9.2.3",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^4.7.3"
  }
}
