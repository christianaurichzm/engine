{
  "scripts": {
    "build-client": "webpack --config webpack.config.js",
    "build-server": "tsc --project tsconfig.server.json",
    "build": "npm run build-client && npm run build-server",
    "start": "node dist/server/server.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/server/server.ts"
  },
  "dependencies": {
    "ws": "^8.17.1"
  },
  "devDependencies": {
    "@types/ws": "^8.5.4",
    "nodemon": "^3.1.3",
    "typescript": "^5.4.5",
    "ts-node": "^10.4.0",
    "ts-loader": "^9.2.3",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.2"
  }
}
