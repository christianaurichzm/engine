{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "outDir": "./dist/client",
    "rootDir": "./src/client",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/client/**/*"],
  "exclude": ["node_modules", "dist"]
}
